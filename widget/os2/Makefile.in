include $(topsrcdir)/config/rules.mk

CXXFLAGS += $(MOZ_CAIRO_CFLAGS) $(MOZ_PIXMAN_CFLAGS) $(MOZ_LIBKAI_CFLAGS)

libs::
	$(INSTALL) $(srcdir)/MozSounds.cmd $(DIST)/bin/
	$(INSTALL) $(srcdir)/README.OS2 $(DIST)/bin/
	$(INSTALL) $(srcdir)/CHANGES.OS2 $(DIST)/bin/
	$(INSTALL) $(srcdir)/RPM_REQUIREMENTS $(DIST)/bin/

export-preqs = \
    $(call mkdir_deps,res) \
    $(NULL)

export:: $(export-preqs)
	test -f ./res/aliasb.ptr || cp $(srcdir)/res/*.* ./res
